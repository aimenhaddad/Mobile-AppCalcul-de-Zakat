<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center_horizontal"
    android:background="#197269"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center"
    tools:context=".about">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="281dp"
        android:layout_marginTop="206dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/rect_about"
        android:foregroundGravity="center_vertical|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="351dp"
            android:layout_height="279dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Zakat  App"
                android:textColor="#F57F17"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="343dp"
                android:layout_height="61dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center_vertical"
                android:text=" Dével oppé par :   Haddad Aimen "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="340dp"
                android:layout_height="77dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center_vertical"
                android:text="Email :  aymen.had2001@gmail.com "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:drawable/divider_horizontal_dim_dark"
                android:gravity="center"
                android:minHeight="48dp"
                android:onClick="back"
                android:text="عودة"
                android:textColor="#F57F17"
                android:textSize="21sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>